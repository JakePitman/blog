<% if current_user && @post.profile == current_user.profile %>
  <div class='options-links-container'>
    <div class='options-link-container'>
      <%= link_to 'edit', edit_post_path(@post), class: 'options-link' %>
    </div>
    <div class='options-link-separator'>
    |
    </div>
    <div class='options-link-container'>
      <%= link_to 'Back to topic', @post.topic, class: 'options-link' %>
    </div>
    <div class='options-link-separator'>
    |
    </div>
    <div class='options-link-container'>
      <%= link_to 'delete', @post, method: :delete, class: 'options-link' %>
    </div>
  </div>
<% end %>


<h1 class='post-show-title'><%= @post.title %></h1>
<div class='post-show-subtitle-container'>
  <div class='bracket bracket-red-top-left'></div>
  <div class='bracket bracket-red-bottom-right'></div>
  <h2 class='post-show-subtitle'><%= @post.subtitle %></h2>
</div>
<div class='post-show-content-container'>
  <div class='post-show-content-red-box'></div>
  <h3 class='post-show-content'>
    <% @post.content.split("\n").each do |paragraph| %>
      <%= paragraph %></br>
    <% end %>
  </h3>

  <div class='post-show-timestamp-container'>
    <%= render 'shared/timestamp', post: @post %>
  </div>
</div>


<hr>


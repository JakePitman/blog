<%= form_for @topic do |f| %>
  <div class='form-container'>
    <%= f.text_field :title, placeholder: 'title', class: 'form-input-field form-input-title' %>

    <%= f.text_area :description, placeholder: 'description', class: 'form-input-field form-input-subtitle' %>

    <%= f.submit class: 'form-submit-btn' %>
  </div>
<% end %>

<%= link_to 'Back', profile_path(current_user), class: 'options-link' %>

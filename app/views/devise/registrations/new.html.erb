<h2 class='form-title'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='form-container'>
    <%= devise_error_messages! %>

    <div class="form-devise-row">
      <div class='form-devise-label-container'>
        <%= f.label :email %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input-field form-input-devise' %>
      <div class='form-devise-label-container'></div>
    </div>

    <div class="form-devise-row">
      <div class='form-devise-label-container'>
        <%= f.label :password %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-input-field form-input-devise' %>
      <div class='form-devise-label-container'>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </div>

    <div class="form-devise-row">
      <div class='form-devise-label-container'>
        <%= f.label :password_confirmation %><br />
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input-field form-input-devise' %>
      <div class='form-devise-label-container'></div>
    </div>

    <div class='form-devise-row'>
      <%= f.fields_for :profile_attributes do |profile_fields| %>
        <div class='form-devise-label-container'>
          <%= profile_fields.label :name, class: 'form-devise-label' %>
        </div>
          <%= profile_fields.text_field :name, class: 'form-input-field form-input-devise'%>
        <div class='form-devise-label-container'></div>
      <% end %>
    </div>

    <div class="form-devise-row">
      <div class='form-devise-label-container'></div>
      <%= f.submit "Sign up", class: 'form-submit-btn' %>
      <div class='form-devise-label-container'></div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class='bottom-spacer'></div>
